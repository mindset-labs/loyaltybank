model User {
  id                 String   @id @default(uuid())
  username           String   @unique @default(cuid())
  name               String
  email              String   @unique
  password           String
  phoneNumber        String?
  is2FAEnabled       Boolean  @default(false)
  twoFactorSecret    String?
  role               Role     @default(USER)
  resetPasswordToken String?
  managedById        String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @default(now())

  // relationships
  myCommunities        Community[]
  memberships          Membership[]
  transactionsSent     Transaction[]       @relation("sender")
  transactionsReceived Transaction[]       @relation("receiver")
  wallets              Wallet[]
  sharedWallets        UserOnWallet[]
  managedBy            User?               @relation("managedBy", fields: [managedById], references: [id])
  managedByMe          User[]              @relation("managedBy")
  events               Event[]
  apiKeys              ApiKey[]
  achievements         Achievement[]
  eventLogs            EventLog[]
  createdEventLogs     EventLog[]          @relation("createdBy")
  AchievementReward    AchievementReward[]
}

enum Role {
  SYSTEM
  SYSTEM_ADMIN
  ADMIN
  MANAGER
  USER
  MANAGED_USER
}
